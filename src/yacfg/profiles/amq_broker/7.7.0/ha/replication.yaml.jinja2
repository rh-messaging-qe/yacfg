---

_defaults:
  broker_name: amq
  broker_home: /opt/amq-broker-7.7.0
  broker_instance: /opt/amq-broker-7.7.0-i0
  cluster_connector_address: 0.0.0.0
  cluster_multicast_address: 233.7.7.9
  cluster_multicast_port: 9876
  log_level_all: INFO
  cluster_load_balancing: ON_DEMAND
  # HA options
  ha_role: master
  ha_slave_allow_failback: true
  ha_group_name: my-artemis-ha-group
  ha_vote_on_replication_failure: true
  ha_check_for_live_server: true  # master only
  ha_allow_failback: true         # slave only

render:
  generator_notice: True
  licenses: True
  template: artemis/2.13.0

broker_xml:
  name: '{{ broker_name }}'

{% include 'artemis/2.13.0/_modules/broker_xml/journal/default.yaml.jinja2' %}

  paging_directory: data/paging
  bindings_directory: data/bindings
  large_messages_directory: data/large-messages
  disk_scan_period: 5000
  max_disk_usage: 90

{% include 'artemis/2.13.0/_modules/broker_xml/critical_analyzer_default.yaml.jinja2' %}

{% include 'artemis/2.13.0/_modules/broker_xml/acceptors/default.yaml.jinja2' %}

{% include 'artemis/2.13.0/_modules/users_roles_security/admin_broker_security_settings.yaml.jinja2' %}

{% include 'artemis/2.13.0/_modules/broker_xml/address_settings/default.yaml.jinja2' %}

{% include 'artemis/2.13.0/_modules/broker_xml/addresses/default.yaml.jinja2' %}

# broker.xml/cluster
{% include 'artemis/2.13.0/_modules/broker_xml/cluster/basic_cluster.yaml.jinja2' %}

# broker.xml/ha
{% if ha_role == 'master' %}
{% include 'artemis/2.13.0/_modules/broker_xml/ha_policy/replication/master.yaml.jinja2' %}
{% elif ha_role == 'slave' %}
{% include 'artemis/2.13.0/_modules/broker_xml/ha_policy/replication/slave.yaml.jinja2' %}
{% endif %}

# artemis.profile
{% include 'artemis/2.13.0/_modules/artemis_profile/default.yaml.jinja2' %}

# users and roles properties xml
{% include 'artemis/2.13.0/_modules/users_roles_security/admin.yaml.jinja2' %}

# bootstrap.xml
{% include 'amq_broker/7.7.0/_modules/bootstrap_xml/allow.yaml.jinja2' %}

# jolokia-access.xml
