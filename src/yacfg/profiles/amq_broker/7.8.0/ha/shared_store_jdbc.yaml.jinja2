---

_defaults:
  broker_name: amq
  broker_home: /opt/amq-broker-7.7.0
  broker_instance: /opt/amq-broker-7.7.0-i0
  cluster_multicast_address: 233.7.7.9
  cluster_multicast_port: 9876
  cluster_connector_address: 0.0.0.0
  log_level_all: INFO
  cluster_load_balancing: ON_DEMAND
  ha_role: master

  jdbc_connection_url: jdbc:my:connection:url
  jdbc_driver_class_name: org.apache.derby.jdbc.EmbeddedDriver

render:
  generator_notice: True
  licenses: True
  template: artemis/2.17.0

broker_xml:
  name: '{{ broker_name }}'

{% include 'artemis/2.17.0/_modules/broker_xml/journal/default.yaml.jinja2' %}

  paging_directory: data/paging
  bindings_directory: data/bindings
  large_messages_directory: data/large-messages
  disk_scan_period: 5000
  max_disk_usage: 90

{% include 'artemis/2.17.0/_modules/broker_xml/critical_analyzer_default.yaml.jinja2' %}

{% include 'artemis/2.17.0/_modules/broker_xml/acceptors/default.yaml.jinja2' %}

{% include 'artemis/2.17.0/_modules/users_roles_security/admin_broker_security_settings.yaml.jinja2' %}

{% include 'artemis/2.17.0/_modules/broker_xml/address_settings/default.yaml.jinja2' %}

{% include 'artemis/2.17.0/_modules/broker_xml/addresses/default.yaml.jinja2' %}

# broker.xml/cluster
{% include 'artemis/2.17.0/_modules/broker_xml/cluster/basic_cluster.yaml.jinja2' %}

# broker.xml/ha
{% if ha_role == 'master' %}
{% include 'artemis/2.17.0/_modules/broker_xml/ha_policy/shared_store/master.yaml.jinja2' %}
{% elif ha_role == 'slave' %}
{% include 'artemis/2.17.0/_modules/broker_xml/ha_policy/shared_store/slave.yaml.jinja2' %}
{% endif %}

# broker.xml/store
{% include 'artemis/2.17.0/_modules/broker_xml/ha_policy/shared_store/shared_store.yaml.jinja2' %}

